<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/darkBackground"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:padding="@dimen/largeMargin"
        android:background="@color/translucent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/folderBrowseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonRoundShape"
            android:padding="@dimen/buttonPadding"
            android:src="@drawable/ic_folder_open"/>
        <Space
            android:layout_width="@dimen/largeMargin"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/imageBrowseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonRoundShape"
            android:padding="@dimen/buttonPadding"
            android:src="@drawable/ic_grid_view"/>
        <Space
            android:layout_width="@dimen/largeMargin"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/toggleInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonRoundShape"
            android:padding="@dimen/buttonPadding"
            android:src="@drawable/ic_toc"/>
        <Space
            android:layout_width="@dimen/largeMargin"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/moreInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonRoundShape"
            android:padding="@dimen/buttonPadding"
            android:src="@drawable/ic_read_more"/>
        <Space
            android:layout_width="@dimen/largeMargin"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/aboutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonRoundShape"
            android:padding="@dimen/buttonPadding"
            android:src="@drawable/ic_info_outline"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/translucent"
        android:paddingLeft="@dimen/largeMargin"
        android:paddingRight="@dimen/largeMargin"
        android:paddingBottom="@dimen/largeMargin"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/moreInfoBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonRoundShape"
            android:padding="@dimen/buttonPadding"
            android:layout_gravity="center"
            android:src="@drawable/ic_read_more"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/largeMargin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/infoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/lightForeground"
                android:background="@color/transparent"
                android:textIsSelectable="false"
                android:textSize="@dimen/largeText" />
           <TextView
                android:id="@+id/infoDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/lightForeground"
                android:background="@color/transparent"
                android:textIsSelectable="false"
                android:textSize="@dimen/smallText" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
